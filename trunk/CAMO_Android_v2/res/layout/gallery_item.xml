<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<ImageView android:layout_width="wrap_content"
		android:id="@+id/imageView_reco_portrait" android:src="@drawable/male"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:layout_gravity="center_horizontal" />
	<TextView android:id="@+id/textView_reco_user"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="user" android:gravity="center_horizontal"
		android:textColor="#ffffffff"
		android:layout_gravity="center_horizontal" />
	<TextView android:id="@+id/textView_reco_rule"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="user" android:textSize="10dip" android:gravity="center_horizontal"
		android:textColor="#EF7100"
		android:layout_gravity="center_horizontal" />

</LinearLayout>