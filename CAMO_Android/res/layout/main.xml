<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <ImageView android:id="@+id/imageView1" android:src="@drawable/logo" android:layout_height="210dp" android:layout_weight="0.03" android:layout_width="270dp" android:layout_gravity="center"></ImageView>
	
	<TableLayout android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:stretchColumns="*">
		<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
			
			<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
				<ImageButton android:id="@+id/imageButton_viewSearch" android:background="#00000000" android:layout_height="wrap_content" android:src="@drawable/menu_search" android:layout_width="wrap_content" android:layout_gravity="center"></ImageButton>
				<TextView android:text="Search" android:textSize="20dip" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TextView>
			</LinearLayout>
			<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
				<ImageButton android:id="@+id/imageButton_viewMediaPlayer" android:background="#00000000" android:layout_height="wrap_content" android:src="@drawable/menu_player" android:layout_width="wrap_content" android:layout_gravity="center"></ImageButton>
				<TextView android:text="Media Player" android:textSize="20dip" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TextView>
			</LinearLayout>

		</TableRow>
		<TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dip">
			<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
				<ImageButton android:id="@+id/imageButton_viewLike" android:background="#00000000" android:layout_height="wrap_content" android:src="@drawable/menu_like" android:layout_width="wrap_content" android:layout_gravity="center"></ImageButton>
				<TextView android:text="My Like" android:textSize="20dip" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TextView>
			</LinearLayout>

			<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
				<ImageButton android:id="@+id/imageButton_viewDislike" android:background="#00000000" android:layout_height="wrap_content" android:src="@drawable/menu_dislike" android:layout_width="wrap_content" android:layout_gravity="center"></ImageButton>
				<TextView android:text="My Dislike" android:textSize="20dip" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TextView>
			</LinearLayout>
		</TableRow>		
	</TableLayout>
</LinearLayout>
